<html tal:define="resource nocall:context/@@layouthelper/static">
    <head>
        <title><span tal:replace="context/title|nothing"/></title>

        <!-- jQuery inclusions -->
        <script type="text/javascript" tal:attributes="src
            resource/jquery.js"></script>
        <script type="text/javascript" tal:attributes="src
            resource/jquery-ui.js"></script>
        <link rel="stylesheet" type="text/css"
          tal:attributes="href resource/jquery-ui.css" />

        <script type="text/javascript"
          tal:attributes="src resource/jstree/lib/sarissa.js"></script>
        <script type="text/javascript"
          tal:attributes="src resource/jstree/jquery.tree.min.js"> </script>
        <script type="text/javascript"
          tal:attributes="src resource/jstree/plugins/jquery.tree.xml_nested.js"></script>

        <!-- CMS-specific inclusions -->
        <script type="text/javascript" tal:attributes="src
            context/@@layouthelper/static/cms.js"></script>
        <link rel="stylesheet" type="text/css"
          tal:attributes="href context/@@layouthelper/static/cms.css" />

        <link rel="shortcut icon" type="image/vnd.microsoft.icon"
            tal:attributes="href context/@@layouthelper/static/favicon.ico" />

        <tal:block condition="context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context.page, '@@preview')"/>
        </tal:block>
        <tal:block condition="not:context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context, '@@preview')"/>
        </tal:block>
        <link rel="root" tal:attributes="href view/application_url"/>

        <base tal:attributes="href string:${context/@@base}"/>
    </head>

    <body>

        <div id="global-navigation">
            <h1 tal:content="python:view.application.editions.next().title">summer09</h1>

            <div class="buttons">
                <a class="toggle-additional-widgets" href="#"><img tal:attributes="src resource/icons/zoom.png" title="Show details"/></a>
                <a class="toggle-news-widgets" href="#"><img tal:attributes="src resource/icons/newspaper.png" title="Show news fields"/></a>
                <a href="#"><img tal:attributes="src resource/icons/page_white_stack.png" title="Editions"/></a>
                <a href="#" id="preview-handle"><img tal:attributes="src resource/icons/page_white_world.png" title="Preview"/></a>
                <span style="width:25px; display:inline-block;"></span>
                <a href="#" id="menu-navigation-handle"><img tal:attributes="src resource/icons/sitemap_color.png" title="Overview"/></a>
                <a href="#" id="toggle-extended-menu"><img tal:attributes="src resource/icons/arrow_down.png" title="More actions"/></a>
            </div>
            <div style="clear:both"></div>
            <div id="breadcrumbs">
                <tal:block repeat="edition context/@@layouthelper/breadcrumbs">
                    <a tal:attributes="href python:view.url(edition)"
                       tal:content="edition/title"/>
                    <span tal:condition="not:repeat/edition/end">&ndash;</span>
                    <span tal:condition="repeat/edition/end"
                          tal:content="edition/parameters/@@index"/>
                </tal:block>
            </div>
        </div>

        <div id="global-navigation2">

            <div id="search">
                <form tal:attributes="action
                    string:${view/application_url}/search">
                    <input type="text" name="q" value="Search ..."/>
                </form>
            </div>

            <div style="clear:both;"></div>
        </div>


        <div id="container" class="clearfix">

            <div id="content">
                <div tal:replace="structure context/@@messages"></div>

                <tal:block replace="structure provider:notes"/>

                <tal:block replace="structure view/render"></tal:block>
            </div>

            <div id="navigation">
                <div id="navigation-tree" tal:attributes="href string:${view/application_url}/@@tree">
                </div>
            </div>

        </div>
    </body>
</html>
