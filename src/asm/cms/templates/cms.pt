<html tal:define="resource nocall:context/@@layouthelper/static">
    <head>
        <title><span tal:replace="context/title|nothing"/></title>

        <!-- jQuery inclusions -->
        <script type="text/javascript" tal:attributes="src
            resource/jquery.js"></script>
        <script type="text/javascript" tal:attributes="src
            resource/jquery-ui.js"></script>
        <link rel="stylesheet" type="text/css"
          tal:attributes="href resource/jquery-ui.css" />

        <script type="text/javascript"
          tal:attributes="src resource/jstree/lib/sarissa.js"></script>
        <script type="text/javascript"
          tal:attributes="src resource/jstree/jquery.tree.min.js"> </script>
        <script type="text/javascript"
          tal:attributes="src resource/jstree/plugins/jquery.tree.xml_nested.js"></script>

        <!-- CMS-specific inclusions -->
        <script type="text/javascript" tal:attributes="src
            context/@@layouthelper/static/cms.js"></script>
        <link rel="stylesheet" type="text/css"
          tal:attributes="href context/@@layouthelper/static/cms.css" />

        <link rel="shortcut icon" type="image/vnd.microsoft.icon"
            tal:attributes="href context/@@layouthelper/static/favicon.ico" />

        <tal:block condition="context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context.page, '@@preview')"/>
        </tal:block>
        <tal:block condition="not:context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context, '@@preview')"/>
        </tal:block>
        <link rel="root" tal:attributes="href view/application_url"/>

        <base tal:attributes="href string:${context/@@base}"/>
    </head>

    <body>

        <div id="header">
            <h1>Assembly Winter 2010</h1>
        </div>

        <div id="pagecontainer">
            <div id="page">
                <div id="content">
                    <tal:block replace="structure provider:pageheader"/>
                    <tal:block replace="structure view/render"></tal:block>
                </div>
                <div id="navigation">
                    <div class="section">
                        <h2>Browse site</h2>
                    </div>
                    <div id="navigation-tree" tal:attributes="href string:${view/application_url}/@@tree">
                    </div>
                </div>
            </div>

            <div id="actions">
                <input type="text" name="q" value="Search ..."/>
                <div class="section">
                    <ul>
                        <li><input type="button" value="Browse"
                        class="button"/></li>
                    </ul>
                </div>

                <tal:block replace="structure provider:main-page-actions"/>
                <div class="extended">
                    <tal:block replace="structure provider:extended-page-actions"/>
                </div>

                <tal:block replace="structure provider:page-action-groups"/>
            </div>
        </div>
    </body>
</html>
