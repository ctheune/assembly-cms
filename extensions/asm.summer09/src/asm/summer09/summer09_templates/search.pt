<h1>Search results</h1>

<div id="search-results">
    <ul>
        <li tal:repeat="result view/results">
            <a tal:attributes="href python:view.url(result)"
                tal:content="result/title">
            </a>
            (<tal:block tal:repeat="tag python:sorted(result.parameters)"
              ><span tal:content="tag"/> </tal:block>)

            <div class="preview" tal:content="structure result/@@searchpreview"/>
        </li>
    </ul>
</div>

