<html>
    <head>
        <title>CMS</title>
        <style>
            * { font-family: "Helvetica", "Lucida Sans", Arial, sans-serif; }
            .selected {font-weight:bold;}
            #cms-ui { width: 200px; float:left;
                      padding-right:1em; margin-right: 1em;}

            #content {float:left;}
        </style>
    </head>

    <body>

        <div id="cms-ui">
            <fieldset>
                <legend>Navigation</legend>

                <tal:block replace="structure context/@@navtree"/>
            </fieldset>

            <fieldset>
                <legend>Actions</legend>

                <ul>
                    <tal:block replace="structure provider:actions"/>
                </ul>
            </fieldset>

            <fieldset>
                <legend>Editions</legend>

                <ul>
                    <tal:block replace="structure provider:editions"/>
                </ul>
            </fieldset>

        </div>

        <div id="content">
            <div tal:replace="structure context/@@messages"></div>

            <tal:block replace="structure view/render"></tal:block>
        </div>

    </body>
</html>
