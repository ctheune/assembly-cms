<h1>Search results</h1>

<div id="search-results">
    <ul>
        <li tal:repeat="result view/results">
            <a tal:attributes="href python:view.url(result, '@@edit')"
                tal:content="result/title">
            </a>
            (<span tal:content="python:' '.join(sorted(result.parameters))"/>)

            <div class="preview" tal:content="structure result/@@preview"/>
        </li>
    </ul>
</div>
