<h1 tal:content="context/title|context/__name__"></h1>

<form id="subpages" tal:attributes="action python:view.url(context, 'updateorder')">
    <table>
        <thead>
            <tr>
                <th>Page</th>
                <th>Last change</th>
                <th>Size</th>
            </tr>
        </thead>
        <tbody id="sortable">
            <tr class="ui-state-default"
                tal:repeat="edition view/pages">
                <td>
                    <input type="hidden" name="order" tal:attributes="value edition/page/__name__"/>
                    <span class="ui-icon ui-icon-document"></span>
                    <a tal:attributes="href python:view.url(edition, '@@edit')" 
                       tal:content="python:edition.title or edition.page.__name__"></a>
                </td>
                <td tal:content="edition/modified/@@format">9999-99-99 00:00</td>
                <td tal:content="edition/size/@@bytesformat">0.9 KiB</td>
            </tr>
        </tbody>
    </table>
</form>
