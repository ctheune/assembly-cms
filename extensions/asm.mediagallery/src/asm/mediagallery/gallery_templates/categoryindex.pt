<h1 tal:content="context/title"></h1>

<table tal:repeat="item view/list" style="display: inline">
  <tr><td>
  <a tal:attributes="href python:view.url(item)">
    <img tal:attributes="src python:view.url(item) + '/' + item.thumbnail;
                         alt item/title" />
  </a>
  </td></tr>
  <tr><td>
    <a tal:attributes="href python:view.url(item)">
      <span tal:replace="item/title" />
    </a>
  </td></tr>
</table>
