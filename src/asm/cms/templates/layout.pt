<html>
    <head>
        <title>CMS</title>
        <link rel="stylesheet" tal:attributes="href context/@@layouthelper/static/cms.css" type="text/css" />

        <base tal:attributes="href string:${context/@@base}"/>

    </head>

    <body>

        <div id="header">
            <h1><span>AssemblyCMS /</span> summer09</h1>
            <div id="user-info">
                logout welcome karri saarinen
            </div>

        </div>
        <div id="container" class="clearfix">
        
            <div id="admin-menu" class="column">
                
                <div id="menu-navigation" class="menu-item">
                    <div class="menu-head">Navigation</div>
                    <div class="menu-content">
                        <tal:block replace="structure context/@@navtree"/>
                    </div>
                </div>
    
                <div id="menu-actions" class="menu-item">
                    <div class="menu-head">Actions</div>
                    <div class="menu-content">
                        <ul>
                            <tal:block replace="structure provider:actions"/>
                        </ul>
                    </div>
                </div>
                
                <div id="menu-actions" class="menu-item">
                    <div class="menu-head">Search</div>
                        <div class="menu-content">
                        <form tal:attributes="action
                            string:${view/application_url}/search">
                            <input type="text" name="q"/>
                        </form>
                    </div>
                </div>
                
            </div>
    
            <div id="content" class="column">
                <div tal:replace="structure context/@@messages"></div>
    
                <tal:block replace="structure view/render"></tal:block>
            </div>
            
            <div id="controls" class="column">
                <div id="menu-editions" class="menu-item">
                    <div class="menu-head">Editions</div>
                    <div class="menu-content">
                        <ul>
                            <tal:block replace="structure provider:editions"/>
                        </ul>
                    </div>
                </div>
            </div>
        
            
        </div>
        <div id="footer">
            <p>AssemblyCMS</p>
        </div>
    </body>
</html>
