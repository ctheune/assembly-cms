<div id="content">

  <div tal:replace="structure context/@@gallerynavbar"/>

</div>

<p tal:condition="view/info/description" tal:replace="structure view/info/description" />

<div tal:repeat="category view/list_categories" class="mediacategory">

  <h2>
    <a tal:attributes="href python:view.url(category.page)">
      <span tal:replace="category/title">Compo type</span> &raquo;
    </a>
  </h2>

  <div class="mediaitemlisting">
    <div tal:repeat="item python:view.list_category_items(category, 5)" class="video">

      <a tal:attributes="href python:view.url(item['edition'])" class="thumbnail">
        <img tal:attributes="src python:view.url(item['edition']) + '/@@thumbnail';
                           alt item/edition/title"
             width="160" height="90" />
        <span tal:replace="item/edition/title"/>
        <span class="by" tal:content="item/gallery/author" />
      </a>
    </div>
  </div>

</div>
<div class="index page clearfix">

  <div tal:repeat="item view/list_items" class="video">

    <a tal:attributes="href python:view.url(item['edition'])" class="thumbnail">
      <img tal:attributes="src python:view.url(item['edition']) + '/@@thumbnail';
                           alt item/edition/title"
           width="160" height="90" />
      <span tal:replace="item/edition/title"/>
      <span class="by" tal:content="item/gallery/author" />
    </a>
  </div>
</div>
