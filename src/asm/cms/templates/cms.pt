<html>
    <head>
        <title>CMS &ndash; <span tal:replace="context/title|nothing"/></title>

        <!-- jQuery inclusions -->
        <script type="text/javascript" tal:attributes="src
            context/@@layouthelper/static/jquery.js"></script>
        <script type="text/javascript" tal:attributes="src
            context/@@layouthelper/static/jquery-ui.js"></script>
        <link rel="stylesheet" type="text/css"
          tal:attributes="href context/@@layouthelper/static/jquery-ui.css" />

        <!-- CMS-specific inclusions -->
        <script type="text/javascript" tal:attributes="src
            context/@@layouthelper/static/cms.js"></script>
        <link rel="stylesheet" type="text/css"
          tal:attributes="href context/@@layouthelper/static/cms.css" />

        <link rel="shortcut icon" type="image/vnd.microsoft.icon"
            tal:attributes="href context/@@layouthelper/static/favicon.ico" />

        <tal:block condition="context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context.page, '@@preview')"/>
        </tal:block>
        <tal:block condition="not:context/page|nothing">
            <link rel="preview" tal:attributes="href python:view.url(context, '@@preview')"/>
        </tal:block>
        <link rel="root" tal:attributes="href view/application_url"/>

        <base tal:attributes="href string:${context/@@base}"/>
    </head>

    <body>
        <div id="header">
            <h1><span>AssemblyCMS /</span>
                <a tal:content="view/application/__name__"
                   tal:attributes="href python:view.url(view.application, '@@edit')">summer09</a>
               <a class="visit-site" href="#">preview</a>
            </h1>

            <div id="search">
                <form tal:attributes="action
                      string:${view/application_url}/search">
                <input type="text" name="q"/>
                </form>
            </div>

            <ul id="user-info">
                <li><a href="#">Logout</a> (<a href="#">username</a>)</li>
            </ul>
        </div>

        <div id="navigation-wrapper">
            <div id="navigation-background">
            </div>
            <div id="navigation" class="menu-item">
                <div class="menu-head">Navigation</div>
                <div class="menu-content" id="navigation-tree">
                    <tal:block replace="structure context/@@navtree"/>
                </div>
                <div class="menu-content" id="navigation-details">
                    <div tal:replace="structure context/@@navdetails"/>
                </div>
            </div>
            <div class="clear"></div>
        </div>

        <div id="container" class="clearfix">
            <div id="admin-menu" class="column">
                <div id="menu-navigation" class="menu-item">
                    <div class="menu-head" id="menu-navigation-handle">Navigation</div>
                </div>

                <div id="menu-actions" class="menu-item">
                    <div class="menu-head">Actions</div>
                    <ul class="menu-content">
                        <tal:block replace="structure provider:actions"/>
                    </ul>
                </div>
            </div> <!-- admin-menu -->

            <div id="content">
                <div tal:replace="structure context/@@messages"></div>

                <tal:block replace="structure provider:notes"/>

                <tal:block replace="structure view/render"></tal:block>
            </div>

        </div>
        <div id="footer">
            <p>AssemblyCMS</p>
        </div>
    </body>
</html>
