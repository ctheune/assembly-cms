  xmlns:browser="http://namespaces.zope.org/browser"
  i18n_domain="asm.cms">

  <grok:grok package="." />

  <subscriber
    factory=".workflow.RetailEditionSelector"
    provides="asm.cms.interfaces.IEditionSelector"
    />

  <subscriber
    factory=".workflow.CMSEditionSelector"
    provides="asm.cms.interfaces.IEditionSelector"
