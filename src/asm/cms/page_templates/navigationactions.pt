<div class="section expandable">
    <form tal:attributes="action python:view.url(context.page, '@@addpage')" method="POST">
        <h3>Add
            <span class="closed ui-icon ui-icon-carat-1-s"></span>
            <span class="open ui-icon ui-icon-carat-1-n"></span>
        </h3>
        <input type="text" name="title" class="clear-first-focus" value="Page title ..."/>
        <ul>
            <li><input type="radio" name="type" value="htmlpage" checked="checked"/>Page</li>
            <li><input type="radio" name="type" value="asset"/>Image/File</li>
            <li class="expand"><input type="radio" name="type" value="news"/>News section</li>
        </ul>
        <button class="button" id="add-page">Add page</button>
    </form>
</div>
